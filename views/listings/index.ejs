<% layout("/layouts/boilerplate")%>

<h3>All listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
  <div class="card col">
    <img class="card-img-top" src="<%= listing.image.url%>" alt="Listing images" style="height: 20rem" />
    <div class="card-img-overlay"></div>
    <div class="card-body">
      <p class="card-text">
       <b> <%= listing.title %> <br /> </b>
        &#8364;<%= listing.price.toLocaleString("fi-FI") %> / night <br />
      </p>
    </div>
  </div>
</a>
  <%} %>
</div>


